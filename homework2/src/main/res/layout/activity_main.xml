<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.mycustomview.SpeedometerView
        android:id="@+id/activity_main_speedometerView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:digitColor="@color/purple_200"
        app:pointerColor="@android:color/holo_red_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxSpeed="180"
        app:segmentationAmount="5"
        app:segmentationColor="@color/black" />

    <Button
        android:id="@+id/activity_main_gasBtn"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:text="Gas"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/activity_main_speedometerView"
        app:layout_constraintStart_toStartOf="@id/activity_main_speedometerView"/>


</androidx.constraintlayout.widget.ConstraintLayout>